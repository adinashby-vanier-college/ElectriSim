<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NewSimulationController">
   <BorderPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../css/styles.css">
      <top>
         <HBox styleClass="menu-bar">
            <children>
               <Label styleClass="menu-logo" text="ElectriSim" />
               <MenuBar prefHeight="40.0" prefWidth="189.0" styleClass="menu-bar-content">
                  <menus>
                     <Menu text="File">
                        <items>
                           <MenuItem onAction="#handleExit" text="Close" />
                        </items>
                     </Menu>
                     <Menu text="Settings">
                        <items>
                           <MenuItem onAction="#handleOpenSettings" text="Open" />
                        </items>
                     </Menu>
                  </menus>
               </MenuBar>
            </children>
         </HBox>
      </top>
      <center>
         <VBox alignment="CENTER" prefHeight="585.0" prefWidth="882.0" spacing="10">
            <children>
               <Label prefHeight="79.0" prefWidth="457.0" styleClass="center-logo" text="New Simulation" />
